<div id="publish-success-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Task Published</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Task code: <span id="task-code"></span>
          <button id="copy-task-code" class="btn btn-secondary btn-sm">Copy</button>
        </p>
        <p>Task URL: <a id="task-url" href="#" target="_blank"></a>
          <button id="copy-task-url" class="btn btn-secondary btn-sm">Copy</button>
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>