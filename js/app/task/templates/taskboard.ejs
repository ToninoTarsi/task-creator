<div>
  <ul>
    <% for(var i = 0;  i < turnpoints.length; i++) { %>
      <li class="taskboard-item">
        <span class="label label-default" style="background-color : <%- turnpoints[i].fillColor %>"><%- turnpoints[i].shortName %></span>
        <%- turnpoints[i].name  + ' [' + turnpoints[i].radius  + ' m] '     %>  
        <% if ( turnpoints[i].type=="start" ) { %>
          <%- turnpoints[i].mode.toUpperCase() %> 
        <% } %>
        <span class="turnpointDistance">
          <% if ( taskInfo.distances[i - 1] ) { %>
            <%- taskInfo.distances[i-1] + 'km' %> 
          <% } %>
        </span>
      </li>
    <% } %>
  </ul>
  <div id="task-distance"> <%- Math.round(taskInfo.distance) / 1000 %> Km </div>
</div>
