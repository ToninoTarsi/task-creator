<div id="turnpoint-config" class="modal fade" role="dialog" aria-labelledby="turnpoint-config-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div id="turnpoint-header" class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
            aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="turnpoint-config-label">Turnpoint Configuration</h4>
      </div>
      <div id="turnpoint-content" class="modal-body">
        <form action="#" autocomplete="off" id="turnpoint-form-config">
          <div class="form-group">
            <div class="form-group row" id="tp-type">
              <label for="tp-type-select" class="col-sm-3 form-control-label">Type</label>
              <select id="tp-type-select" class="col-sm-6" name="type" autocomplete="off">
              </select>
            </div>
            <div class="form-group row" id="tp-goal-type">
              <label for="tp-goal-type-select" class="col-sm-3 form-control-label">Goal type</label>
              <select id="tp-goal-type-select" class="col-sm-6" name="goal-type" autocomplete="off">
              </select>
            </div>
            <div class="form-group row" id="tp-radius">
              <label for="tp-radius-input" class="col-sm-3 form-control-label">Radius</label>
              <div class="input-group col-sm-6">
                <input id="tp-radius-input" class="form-control" name="radius" type="number" min="200" step="100"
                  placeholder="400">
                <div class="input-group-addon">Meters</div>
              </div>
            </div>
            <div class="form-group row" id="tp-mode">
              <label for="tp-mode-select" class="col-sm-3 form-control-label">Mode</label>
              <select id="tp-mode-select" class="col-sm-6" name="mode" autocomplete="off">
              </select>
            </div>
            <div class="form-group row" id="tp-open">
              <label for="tp-open-input" class="col-sm-3 form-control-label">Opening Time</label>
              <div class="input-group col-sm-6">
                <input id="tp-open-input" class="form-control" name="opening_time" type="text" placeholder="12:00:00">
                <div class="input-group-addon">hh:mm:ss</div>
              </div>
            </div>
            <div class="form-group row" id="tp-close">
              <label for="tp-close-input" class="col-sm-3 form-control-label">Closing Time</label>
              <div class="input-group col-sm-6">
                <input id="tp-close-input" class="form-control" name="close_time" type="text" placeholder="19:00:00">
                <div class="input-group-addon">hh:mm:ss</div>
              </div>
            </div>


            <div class="form-group row" id="tp-ngates">
              <label for="tp-ngates-input" class="col-sm-3 form-control-label">N Gates</label>
              <div class="input-group col-sm-6">
                <input id="tp-ngates-input" class="form-control" name="ngates" type="number" placeholder="1">
              </div>
            </div>

            <div class="form-group row" id="tp-gateint">
                <label for="tp-gateint-input" class="col-sm-3 form-control-label">Gates Interval</label>
                <div class="input-group col-sm-6">
                  <input id="tp-gateint-input" class="form-control" name="gateint" type="text" placeholder="15">
                  <div class="input-group-addon">Minutes</div>
                </div>
              </div>


            <input id="tp-index" type="hidden" name="country" value="">
          </div>
          <div class="modal-footer">
            <button type="button" id="add-turnpoint" class="btn btn-success">Add Turnpoint!</button>
            <button type="button" id="edit-turnpoint" class="btn btn-warning">Edit Turnpoint!</button>
            <button type="button" id="delete-turnpoint" class="btn btn-danger">Delete Turnpoint!</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>